# Treasury Service environment template
TREASURY_APP_NAME=treasury-api
TREASURY_APP_ENV=development
TREASURY_APP_REGION=africa-east-1
TREASURY_APP_VERSION=0.1.0

TREASURY_HTTP_HOST=0.0.0.0
TREASURY_HTTP_PORT=4001
TREASURY_HTTP_READ_TIMEOUT=20s
TREASURY_HTTP_WRITE_TIMEOUT=20s
TREASURY_HTTP_IDLE_TIMEOUT=90s
# TLS configuration for HTTPS (mkcert certificates) - local development only
# Uncomment and set paths to enable HTTPS
# TREASURY_HTTP_TLS_CERT_FILE=./config/certs/accounts.codevertex.local.pem
# TREASURY_HTTP_TLS_KEY_FILE=./config/certs/accounts.codevertex.local-key.pem

TREASURY_GRPC_PORT=9091
TREASURY_GRPC_REFLECTION=true
TREASURY_GRPC_HEALTH_ENABLED=true
TREASURY_GRPC_TLS_CERT=
TREASURY_GRPC_TLS_KEY=
TREASURY_GRPC_CLIENT_CA_CERT=

TREASURY_POSTGRES_URL=postgres://postgres:postgres@localhost:5432/treasury?sslmode=disable
TREASURY_POSTGRES_MAX_OPEN_CONNS=30
TREASURY_POSTGRES_MAX_IDLE_CONNS=15
TREASURY_POSTGRES_CONN_MAX_LIFETIME=45m

TREASURY_REDIS_ADDR=localhost:6379
TREASURY_REDIS_USERNAME=
TREASURY_REDIS_PASSWORD=
TREASURY_REDIS_DB=0
TREASURY_REDIS_TLS_REQUIRED=false
TREASURY_REDIS_DIAL_TIMEOUT=5s

TREASURY_EVENT_BUS=nats
TREASURY_NATS_URL=nats://localhost:4222
TREASURY_NATS_STREAM=treasury
TREASURY_NATS_DELIVER_GROUP=treasury-workers
TREASURY_NATS_DLQ_STREAM=treasury-dlq

TREASURY_STORAGE_PROVIDER=minio
TREASURY_STORAGE_ENDPOINT=http://localhost:9000
TREASURY_STORAGE_ACCESS_KEY=
TREASURY_STORAGE_SECRET_KEY=
TREASURY_STORAGE_BUCKET=treasury-artifacts
TREASURY_STORAGE_USE_SSL=false

TREASURY_SECRETS_PROVIDER=vault
TREASURY_SECRETS_ADDRESS=http://localhost:8200
TREASURY_SECRETS_TOKEN=

TREASURY_OTLP_ENDPOINT=
TREASURY_METRICS_ENDPOINT=
TREASURY_TRACING_ENDPOINT=

# Auth Service SSO (JWT) settings
TREASURY_AUTH_SERVICE_URL=https://auth.codevertex.local:4101
TREASURY_AUTH_ISSUER=https://auth.codevertex.local:4101
TREASURY_AUTH_AUDIENCE=bengobox
TREASURY_AUTH_JWKS_URL=https://auth.codevertex.local:4101/api/v1/.well-known/jwks.json
TREASURY_AUTH_JWKS_CACHE_TTL=3600s
TREASURY_AUTH_JWKS_REFRESH_INTERVAL=300s